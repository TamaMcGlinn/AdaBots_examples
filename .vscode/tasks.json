{
	"version": "2.0.0",
	"tasks": [
	  {
		  "type": "shell",
		  "command": "alr build -- -Xexecutables=${fileBasenameNoExtension}",
		  "problemMatcher": [
			  "$ada"
		  ],
		  "label": "Build current program",
		  "group": {
			  "kind": "build",
			  "isDefault": true
		  }
	  },
		{
			"type": "shell",
			"command": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
			"label": "Run current program"
		},
		{
			"type": "shell",
			"command": "alr build",
			"problemMatcher": [
				"$ada"
			],
			"label": "Build all examples",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}
